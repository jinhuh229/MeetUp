<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    tools:context="com.mobileappdev.teamone.meetup.EventDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/editEventButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="300dp"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="15dp"
                    android:src="@android:drawable/ic_menu_edit" />

                <com.google.android.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:apiKey="AIzaSyCKIqc6nOI3CrHc6UvYgqiNCozmvsp-m7Q"
                    android:clickable="true"
                    android:layout_below="@+id/editEventButton"
                    android:enabled="true" />

                <TextView
                    android:id="@+id/LocationOfEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mapView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="140dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="5dp"
                    android:text="Location of Event" />

                <TextView
                    android:id="@+id/Start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/Start2"
                    android:layout_below="@+id/LocationOfEvent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Start" />


                <TextView
                    android:id="@+id/End"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="End"
                     />

                <TextView
                    android:id="@+id/LinkSharing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/End"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Link Sharing"
                    />

                <TextView
                    android:id="@+id/Approval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/LinkSharing"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Approval Required"
                    />

                <TextView
                    android:id="@+id/Attendee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Approval"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Number of Attendees"
                    />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/Attendee"/>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
